<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">m.media-amazon.com</domain>
        <trust-anchors>
            <certificates src="@raw/m_media_amazon"/>
        </trust-anchors>
    </domain-config>
</network-security-config>